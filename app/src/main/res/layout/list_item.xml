<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/handel_inventory_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/beer"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/handel_inventory_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/handel_inventory_icon"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/handel_inventory_icon"
        android:gravity="center"
        android:text="4" />

    <TextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/handel_inventory_amount"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/handel_inventory_amount"
        android:gravity="center"
        android:text="x " />

    <TextView
        android:id="@+id/handel_inventory_prouct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/x"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/x"
        android:gravity="center"
        android:text="Beer" />

</RelativeLayout>