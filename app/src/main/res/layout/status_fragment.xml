<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/status_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:textSize="72sp" />

    <TextView
        android:text="@string/position_string"
        android:id="@+id/INTERNAL_pos_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/status_name_text"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/status_position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/INTERNAL_pos_text"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/INTERNAL_pos_text"
        android:layout_alignLeft="@id/INTERNAL_pos_text" />

    <TextView
        android:text="@string/arrival_string"
        android:id="@+id/INTERNAL_arrival_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/INTERNAL_pos_text"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/status_position_text"
        android:layout_alignLeft="@id/INTERNAL_pos_text" />

    <ProgressBar
        android:progress="267149"
        android:id="@+id/status_arrival_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/INTERNAL_arrival_text"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:max="@integer/max_travel_time_ms" />

    <TextView
        android:id="@+id/status_arrival_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_below="@id/status_arrival_progressbar" />

    <TextView
        android:text="@string/balance_string"
        android:id="@+id/INTERNAL_bal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/INTERNAL_pos_text"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/status_arrival_text"
        android:layout_alignLeft="@id/INTERNAL_pos_text" />

    <TextView
        android:id="@+id/status_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/INTERNAL_pos_text"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/INTERNAL_bal_text"
        android:layout_alignLeft="@id/INTERNAL_pos_text" />

</RelativeLayout>